<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:id="@+id/preferences_card_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/preferences_recycler_card_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/recycler_view_image"
            android:src="@drawable/ic_baseline_location_city_24" />

        <TextView
            android:id="@+id/preferences_recycler_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/preferences_recycler_card_image"
            android:text="Placeholder Title"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/preferences_recycler_card_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/preferences_recycler_card_title"
            android:layout_toEndOf="@id/preferences_recycler_card_image"
            android:text="Placeholder country" />

        <ImageButton
            android:id="@+id/preferences_recycler_card_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="#FFF"
            android:src="@drawable/ic_delete"
            android:contentDescription="@string/delete_icon_description" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>